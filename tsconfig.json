{
  "include": [ "src", "pub", "typings.d.ts" ],
  "exclude": ["node_modules", "*.test.*"],
  "compilerOptions": {
    "checkJs": false,
    "strict": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "lib": ["ES2015", "DOM"],
    "module": "esnext",
    "target": "ES5",
    "jsx": "react",
    "outDir": "dist",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,
    "removeComments": false,
    "baseUrl": ".",
    "paths": {
      "api/*": ["./pub/api/*"],
      "ast/*": ["./pub/ast/*"],
      "com/*": ["./pub/com/*"],
      "utl/*": ["./pub/utl/*"]
    }
  }
}
